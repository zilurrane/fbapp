{
  "extends": "airbnb",
  "parser": "babel-eslint",

  "plugins": [
    "react"
  ],

  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },

  "rules": {
    "import/prefer-default-export": "off",
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to", "hrefLeft", "hrefRight" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }],
    "max-len": ["error", {"code": 200, "ignoreRegExpLiterals": true, "tabWidth": 4}],
    "no-console": [1],
    "linebreak-style": "off",
    "react/no-array-index-key": "off",
    "function-paren-newline": "off",
  }
}